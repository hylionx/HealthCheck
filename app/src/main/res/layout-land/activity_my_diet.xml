<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtMyDietQ2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAC069"
    tools:context=".MyDietActivity">

    <TextView
        android:id="@+id/my_diet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_diet_title"
        android:textColor="#F3F3F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/myDietImg"
        app:layout_constraintStart_toStartOf="@+id/myDietImg"
        app:layout_constraintTop_toBottomOf="@+id/myDietImg"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/myDietImg"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:contentDescription="@string/my_diet_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scrollView4"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/alimentation"
        tools:ignore="ImageContrastCheck" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#f8ac3b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp">

            <CheckBox
                android:id="@+id/checkBoxMyDietQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:text="@string/txtMyDietQ1"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyDietQ2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/txtMyDietQ2"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyDietQ1"
                app:layout_constraintHorizontal_bias="0.56"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyDietQ1"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyDietQ1"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <TextView
                android:id="@+id/txtMyDietQ3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/txtMyDietQ3"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyDietQ2"
                app:layout_constraintHorizontal_bias="0.587"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyDietQ2"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyDietQ2"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinnerMyDietRepQ3"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginTop="16dp"
                android:background="#FFEB3B"
                android:backgroundTint="#FFD89E"
                android:entries="@array/myDiet_answer_question_2"
                app:layout_constraintEnd_toEndOf="@+id/txtMyDietQ3"
                app:layout_constraintStart_toStartOf="@+id/txtMyDietQ3"
                app:layout_constraintTop_toBottomOf="@+id/txtMyDietQ3"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyDietQ4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/txtMyDietQ4"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/spinnerMyDietRepQ3"
                app:layout_constraintStart_toStartOf="@+id/spinnerMyDietRepQ3"
                app:layout_constraintTop_toBottomOf="@+id/spinnerMyDietRepQ3"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyDietQ5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/txtMyDietQ5"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyDietQ4"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyDietQ4"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyDietQ4"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyDietQ6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/txtMyDietQ6"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyDietQ5"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyDietQ5"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyDietQ5"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <Button
                android:id="@+id/btnPrevMyDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/btnPrec"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnNextMyDiet"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/btnNextMyDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btnNext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyDietQ6"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="TextContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>