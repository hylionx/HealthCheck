<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F17391"
    tools:context=".MyStressManagementActivity">

    <ImageView
        android:id="@+id/imgStressMngmt"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:contentDescription="@string/myStressManagementTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scrollView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stress"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myStressManagementTitle"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgStressMngmt"
        app:layout_constraintStart_toStartOf="@+id/imgStressMngmt"
        app:layout_constraintTop_toBottomOf="@+id/imgStressMngmt"
        tools:ignore="TextContrastCheck" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#E15778"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMyStressManagementQ1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="100dp"
                android:text="@string/txtMyStressManagementQ1"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinnerMyStressManagementRepQ1"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="#F4C0D9"
                android:entries="@array/myStressManagment_answer_question_1"
                app:layout_constraintEnd_toEndOf="@+id/txtMyStressManagementQ1"
                app:layout_constraintStart_toStartOf="@+id/txtMyStressManagementQ1"
                app:layout_constraintTop_toBottomOf="@+id/txtMyStressManagementQ1"
                tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/txtMyStressManagementQ2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txtMyStressManagementQ2"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/spinnerMyStressManagementRepQ1"
                app:layout_constraintStart_toStartOf="@+id/spinnerMyStressManagementRepQ1"
                app:layout_constraintTop_toBottomOf="@+id/spinnerMyStressManagementRepQ1"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinnerMyStressManagementRepQ2"
                android:layout_width="338dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="#F4C0D9"
                android:entries="@array/myStressManagment_answer_question_2"
                app:layout_constraintEnd_toEndOf="@+id/txtMyStressManagementQ2"
                app:layout_constraintStart_toStartOf="@+id/txtMyStressManagementQ2"
                app:layout_constraintTop_toBottomOf="@+id/txtMyStressManagementQ2"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMyStressManagementQ3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txtMyStressManagementQ3"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/spinnerMyStressManagementRepQ2"
                app:layout_constraintStart_toStartOf="@+id/spinnerMyStressManagementRepQ2"
                app:layout_constraintTop_toBottomOf="@+id/spinnerMyStressManagementRepQ2"
                tools:ignore="TextContrastCheck" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMyStressManagementQ4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txtMyStressManagementQ4"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/switchMyStressManagementQ3"
                app:layout_constraintStart_toStartOf="@+id/switchMyStressManagementQ3"
                app:layout_constraintTop_toBottomOf="@+id/switchMyStressManagementQ3"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <Button
                android:id="@+id/btnPrevMyStressManagment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/btnPrec"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnNextMyStressManagment"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnNextMyStressManagment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btnNext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switchMyStressManagementQ4"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>