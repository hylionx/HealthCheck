<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47D1B6"
    tools:context=".formActivities.MyTobaccoConsumptionActivity">

    <ImageView
        android:id="@+id/myTobaccoImg"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:contentDescription="@string/myTobaccoConsumptionTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scrollView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tabac"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/myTobaccoConsumptionTitle"
        android:layout_width="222dp"
        android:layout_height="59dp"
        android:text="@string/myTobaccoConsumptionTitle"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/myTobaccoImg"
        app:layout_constraintStart_toStartOf="@+id/myTobaccoImg"
        app:layout_constraintTop_toBottomOf="@+id/myTobaccoImg"
        tools:ignore="TextContrastCheck" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#37B39B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp">

            <CheckBox
                android:id="@+id/checkBoxMyTobaccoConsumptionQ2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txtMyTobaccoConsumptionQ2"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyTobaccoConsumptionQ1"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyTobaccoConsumptionQ1"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyTobaccoConsumptionQ1"
                tools:ignore="DuplicateSpeakableTextCheck,DuplicateClickableBoundsCheck,TextContrastCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyTobaccoConsumptionQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="60dp"
                android:text="@string/txtMyTobaccoConsumptionQ1"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <CheckBox
                android:id="@+id/checkBoxMyTobaccoConsumptionQ3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txtMyTobaccoConsumptionQ3"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/checkBoxMyTobaccoConsumptionQ2"
                app:layout_constraintStart_toStartOf="@+id/checkBoxMyTobaccoConsumptionQ2"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyTobaccoConsumptionQ2"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btnPrevMyTobaccoConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnPrec"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnNextMyTobaccoConsumption"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btnNextMyTobaccoConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btnNext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxMyTobaccoConsumptionQ3"
                tools:ignore="TextContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>