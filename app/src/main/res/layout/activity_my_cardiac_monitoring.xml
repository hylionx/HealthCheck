<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0cb4bd"
    tools:context=".MyCardiacMonitoringActivity">

    <ImageView
        android:id="@+id/my_cardiac_monitoring_img"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:contentDescription="cardiac_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/suivicardiaque"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/my_cardiac_monitoring_title"
        android:layout_width="223dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="@string/my_cardiac_monitoring_title"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/my_cardiac_monitoring_img"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/my_cardiac_monitoring_img"
        app:layout_constraintTop_toBottomOf="@+id/my_cardiac_monitoring_img"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtCardiacMonitoringQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="TextView"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_cardiac_monitoring_title" />
</androidx.constraintlayout.widget.ConstraintLayout>