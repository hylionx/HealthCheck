<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8426E"
    android:visibility="visible"
    tools:context=".MyHeart">

    <TextView
        android:id="@+id/titre_mon_coeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/my_heart"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/my_heart_img"
        app:layout_constraintStart_toStartOf="@+id/my_heart_img"
        app:layout_constraintTop_toBottomOf="@+id/my_heart_img" />

    <ImageView
        android:id="@+id/my_heart_img"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/my_heart"
        android:src="@drawable/moncoeur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre_mon_coeur"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/q1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/question1"
                android:text="@string/question1"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/sp_q1"
                android:layout_width="337dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="#80FFFFFF"
                android:backgroundTint="#FBFBFB"
                android:backgroundTintMode="multiply"
                android:popupBackground="@color/black"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/q1_txt"
                app:layout_constraintStart_toStartOf="@+id/q1_txt"
                app:layout_constraintTop_toBottomOf="@+id/q1_txt"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/q2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/question2"
                android:text="@string/question2"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/sp_q1"
                app:layout_constraintStart_toStartOf="@+id/sp_q1"
                app:layout_constraintTop_toBottomOf="@+id/sp_q1"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/sp_q2"
                android:layout_width="264dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="#80FFFFFF"
                android:backgroundTint="#FBFBFB"
                android:backgroundTintMode="multiply"
                android:popupBackground="@android:color/black"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/q2_txt"
                app:layout_constraintStart_toStartOf="@+id/q2_txt"
                app:layout_constraintTop_toBottomOf="@+id/q2_txt"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sp_q4"
                app:layout_constraintEnd_toEndOf="@+id/sp_q2"
                app:layout_constraintStart_toStartOf="@+id/sp_q2"
                app:layout_constraintTop_toBottomOf="@+id/sp_q2"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#80FFFFFF"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sp_q3"
                app:layout_constraintEnd_toEndOf="@+id/spinner2"
                app:layout_constraintStart_toStartOf="@+id/spinner2"
                app:layout_constraintTop_toBottomOf="@+id/spinner2"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="313dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="#80FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_suivant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:text="@string/next_step"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner" />

            <Button
                android:id="@+id/button_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/previous_step"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_suivant"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>